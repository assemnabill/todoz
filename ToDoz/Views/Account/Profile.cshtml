@model ToDoz.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
    //Layout = "_UserLayout";
}


<div class="card">
    <form class="form-horizontal">
        <div class="card-body">
            <div class="form-group col-md-2">
                <img src="@Model.ProfileImage"
                     alt="" class="img-rounded img-responsive" />
            </div>
            <div class="form-group row">
                <text class="col-sm-3 text-left">Name</text>
                <div class="col-sm-9">
                    <text id="name">@Model.Name</text>
                </div>
            </div>
            <div class="form-group row">
                <text class="col-sm-3 text-left">Email Adresse</text>
                <div class="col-sm-9">
                    <text id="email">@Model.EmailAddress</text>
                </div>
            </div>

            <div class="form-group row">
                <text class="col-sm-3 text-left">Birthday</text>
                <div class="col-sm-9">
                    <text id="birthday">@Model.Birthday</text>
                </div>
            </div>

        </div>
    </form>
</div>



